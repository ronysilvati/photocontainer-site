{% for event in found.result %}
  {% if profile == 3 %}
    {% set thecol = 'col-lg-3 col-md-4 col-sm-6 col-12' %}
  {% else %}
    {% set thecol = 'col-lg-4 col-md-4 col-sm-6 col-12' %}
  {% endif %}
  {%
    include 'partials/components/render_thumb.twig' with {
    'data': event,
    'profile': profile,
    'sigla': sigla,
    'type': 'footer',
    'col': thecol,
    'show': [
      'icon',
      'photo-name',
      'album-type',
      'album-name',
      'image-count',
      'fav-count'
    ]
  }
  %}
{% endfor %}

<script>
  $( document ).ready(function(){
    $(".search-hits").html({{ found.total }})
  })

  Event.removeEvent(localStorage.endpoint)
  Event.likeEvent(localStorage.endpoint)
  Event.dislikeEvent(localStorage.endpoint)
</script>
