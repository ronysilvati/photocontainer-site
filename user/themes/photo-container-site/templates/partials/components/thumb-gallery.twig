{% set thumb_class = 'card thumb-gallery ratio-1by1' %}
{% if type %}
  {% set thumb_class = thumb_class ~ ' thumb-gallery-' ~ type %}
{% endif %}
{% if not col %}
  {% set col = "col-md-3" %}
{% endif %}
{%
  set image = [
    url('theme://_temp/gallery/1.jpg'),
    url('theme://_temp/gallery/2.jpg'),
    url('theme://_temp/gallery/3.jpg'),
    url('theme://_temp/gallery/4.jpg'),
    url('theme://_temp/gallery/5.jpg'),
    url('theme://_temp/gallery/6.jpg'),
    url('theme://_temp/gallery/7.jpg'),
    url('theme://_temp/gallery/8.jpg'),
    url('theme://_temp/gallery/9.jpg'),
    url('theme://_temp/gallery/10.jpg')
  ]
%}

<div class="{{col}}">
  <div class="{{thumb_class}}">
    <img alt='' src="{{random(image)}}">
    <div class="card-text">
      <div class="card-text-inner">

        {% if show %}
          {% for key, value in show %}

            {% if value == 'album-type' %}  <p class="album-type"><a href="#">Casamento</a></p>{% endif %}
            {% if value == 'image-count' %} <p class="image-count"><span>{{random(110)}}</span> fotos</p> {% endif %}
            {% if value == 'album-name' %}  <p class="album-name"><a href="#">Roberta & Marcio</a></p>{% endif %}
            {% if value == 'date' %}        <p class="">Criado em 30/01/2017</p>{% endif %}
            {% if value == 'photo-label' %} <p class="photo-label">Fotógrafo</p>{% endif %}
            {% if value == 'photo-name' %}  <p class="photo-name"><a href="#">Sebastião Doce</a></p>{% endif %}
            {% if value == 'fav-count' %}   <p class="fav-count"><i class="icon-star"></i>{{random(110)}}</p>{% endif %}
            {% if value == 'icon' %}        <p class="icon"><a href="#"><i class="icon-search"></i></a></p>{% endif %}

            {% if key == 'nav' %}
              <ul class="nav">
              {% for value_nav in value %}
                <li class="nav-item">
                  <a class="nav-link" href="#">
                    {% if value_nav == 'fav' %}       <i class="icon-star"></i>{% endif %}
                    {% if value_nav == 'edit' %}      <i class="icon-pencil"></i>{% endif %}
                    {% if value_nav == 'trash' %}     <i class="icon-trash"></i>{% endif %}
                    {% if value_nav == 'search' %}    <i class="icon-search"></i>{% endif %}
                    {% if value_nav == 'download' %}  <i class="icon-download"></i>{% endif %}
                  </a>
                </li>
              {% endfor %}
              </ul>
            {% endif %}

          {% endfor %}
        {% endif %}

      </div>
    </div>
  </div>
</div>
