<div class="form-filters">
  <h5 class="title">Selecione as cores</h5>
  <div class="form-colors">
    <div data-toggle="buttons">
      {%
      set colors = [
        ['Branco',             '#FFFFFF'],
        ['Pele',               '#FAF1E4'],
        ['Milão',              '#FFFFA3'],
        ['Ouro',               '#FFD200'],
        ['Laranja',            '#FFA400'],
        ['Pera',               '#ED742E'],
        ['Escarlate',          '#FF1A00'],
        ['Roxo',               '#FF00D2'],
        ['Rosa',               '#F9C0EB'],
        ['Azul Hawkes',        '#CAC9FC'],
        ['Violeta',            '#6E1BDF'],
        ['Azul Bahama',        '#08679E'],
        ['Azul Dodger',        '#3BA2FF'],
        ['Azul Vela',          '#B9E2FB'],
        ['Turquesa ',          '#33D4D6'],
        ['Verde hortelã',      '#BAF9C6'],
        ['Arlequim',           '#39D200'],
        ['Verde musgo',        '#029239'],
        ['Castanho',           '#7F5843'],
        ['Prata',              '#A3A3A3'],
        ['Preto',              '#000000'],
        ['Grama dourada',      '#E49F2D'],
        ['Linho',              '#EDCC83'],
        ['Cinza',              '#D5D3D3']
      ]
      %}
      {% for color in colors %}
      <label style="background-color:{{ color[1] }}" class="btn btn-secondary btn-check btn-color" title="{{ color[0] }}">
        <input type="checkbox">
      </label>
      {% endfor %}

    </div>
  </div>
  <h5 class="title mt-5">Selecione as tags</h5>
  <div class="row row-md">
    {% for i in range(1,4) %}

    <div class="col-md-3">
      <h6 class="title mt-3 text-center text-uppercase"><small>Cenários</small></h6>
      <hr class="mt-0">
      <div data-toggle="buttons">
          {% for i in range(5,random(12)) %}
        <label class="btn btn-secondary btn-check btn-block">
          <input type="checkbox" autocomplete="off">Hotel
        </label>
        {% endfor %}
      </div>
    </div>

    {% endfor %}
  </div>
</div>
