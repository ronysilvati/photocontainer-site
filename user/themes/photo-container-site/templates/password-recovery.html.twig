{% extends 'partials/base.html.twig' %}

{% block content %}
<div class="app page-login page-signin">
  <div class="page-login-inner">

    <div class="login-box">

      <h2 class='title text-uppercase'>Recupere a sua senha</h2>

      <form class="form-pdw-recovery form-validate">
        <div class="form-group">
          <label for="input_email" class="sr-only">E-mail</label>
          <input type="email" id="input_email" name="input_email" class="form-control form-control-login" placeholder="E-mail" required="" autofocus="">
          <label class="error msg-error" for="input_email" style="display: none;"></label>
        </div>

        <div class="text-center">
          <button class="btn btn-submit btn-outline-secondary" type="submit">Recuperar</button>
        </div>

      </form>

    </div>

    {{ include('partials/components/login-footer.twig') }}
  </div>

</div>

<script type="application/javascript">
$( document ).ready(function(){
  $('.form-pdw-recovery').on('submit', function (e) {
    e.preventDefault()
    PasswordRecovery.requestRecover()
  })
})
</script>

{% endblock %}
