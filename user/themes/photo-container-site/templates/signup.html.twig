{% extends 'partials/base.html.twig' %}

{% block content %}
    <div class="app page-login" style="background-image: url(http://kohl.com.br/work/fc/_temp/signup-bg.png)">
        <div class="login-box">
            <h2 class='title text-uppercase'>Acesse seu perfil</h2>
            <form class="form-signup">
                <small class="form-check form-check-inline text-white text-uppercase">
                    <label class="form-check-label mr-3" onClick="$('#collapse_input_blog').collapse('hide');">
                        <input class="form-check-input" type="radio" name="type" value="1" checked=""> Sou fotógrafo
                    </label>
                    <label class="form-check-label" onClick="$('#collapse_input_blog').collapse('show');">
                        <input class="form-check-input" type="radio" name="type" value="2"> Tenho um Blog
                    </label>
                </small>
                <div class="collapse" id="collapse_input_blog">
                    <div class="form-group">
                        <label for="input_blog" class="sr-only">URL do blog</label>
                        <input type="url" id="input_blog" class="form-control form-control-login" placeholder="URL do blog" required="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="input_email" class="sr-only">E-mail</label>
                    <input type="email" id="input_email" class="form-control form-control-login" placeholder="E-mail" required="">
                </div>
                <div class="form-group">
                    <label for="input_remail" class="sr-only">Confirmar e-mail</label>
                    <input type="email" id="input_remail" class="form-control form-control-login" placeholder="Confirmar e-mail" required="">
                </div>
                <div class="form-group">
                    <label for="input_password" class="sr-only">Senha</label>
                    <input type="password" id="input_password" class="form-control form-control-login" placeholder="Senha" required="">
                </div>
                <div class="text-center mt-4">
                    <button class="btn btn-submit btn-primary btn-outline-secondary" type="submit">Entrar</button>
                </div>
                <div class="text-center pt-3">
                    <small class="text-white text-muted d-block">Já possue um perfil?</small>
                    <a class="text-white text-uppercase" href="page-signin.php">
                        Acessar seu perfil
                    </a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
